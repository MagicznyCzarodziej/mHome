{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./build",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "app/*": ["app/*"],
      "database/*": ["database/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./build/*", "./node_modules/*"]
}
